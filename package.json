{
	"name": "@extws/server-bun",
	"version": "0.2.0-beta.2",
	"description": "ExtWS server for Bun",
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"main": "dist/esm/main.js",
	"types": "dist/esm/main.d.ts",
	"exports": {
		".": {
			"import": "./dist/esm/main.js",
			"require": "./dist/main.cjs"
		}
	},
	"dependencies": {
		"@extws/server": "^0.2.0-beta.3"
	},
	"peerDependencies": {
		"@kirick/ip": "^0.1.1"
	},
	"devDependencies": {
		"@kirick/eslint-config": "^0.1.30",
		"@types/bun": "^1.1.6",
		"typescript": "5.5.4",
		"vitest": "2.1.2"
	},
	"scripts": {
		"build": "bun run build:ts && bun run build:cjs",
		"build:cjs": "bunx esbuild --bundle --platform=node --format=cjs --packages=external --outfile=dist/main.cjs dist/esm/main.js",
		"build:ts": "rm -r dist/esm dist/types ; tsc",
		"lint": "eslint . && tsc --skipLibCheck --noemit",
		"publish:npm": "bun run build && bun run lint && bun run test && npm publish",
		"test": "bun test --coverage"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/extws-team/server-bun.git"
	},
	"keywords": [],
	"author": "Daniil Kirichenko (https://twitter.com/kirickme)",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/extws-team/server-bun/issues"
	},
	"homepage": "https://github.com/extws-team/server-bun#readme"
}
